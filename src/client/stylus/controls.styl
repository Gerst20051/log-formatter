#controlPanel
  padding 1em 0
  position fixed
  right 38px
  top 8%
  width 48px
  z-index 1

ul
  &#controls
    list-style none
    padding 0

    li
      background-color transparent
      background-size cover
      border-radius 100%
      box-shadow inset 0 2px 0 rgba(138, 211, 242, .4), inset 0 -1px 0 rgba(138, 211, 242, .4)
      cursor pointer
      display block
      height 3em
      margin 20% 0
      width 3em

      &:hover
        background-color rgba(138, 211, 242, 0.5)
        box-shadow inset 0 2px 0 rgba(138, 211, 242, 1), inset 0 -1px 0 rgba(138, 211, 242, 1), 0 0 1em rgba(138, 211, 242, 1)

      &#searchControl
        background-image url('../images/search.png')

      &#searchControl.active
        background-image url('../images/up.png')

      &#eyeControl
        background-image url('../images/eyeopen.png')

      &#eyeControl.active
        background-image url('../images/eyeclosed.png')

      &#wrapControl
        background-image url('../images/wrap.png')

      &#wrapControl.active
        background-image url('../images/unwrap.png')

      &#clearControl
        background-image url('../images/clear.png')

      &#scrollTopControl
        background-image url('../images/scrolltop.png')

      &#scrollBottomControl
        background-image url('../images/scrollbottom.png')
